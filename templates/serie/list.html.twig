{% extends 'base.html.twig' %}



{% block title %}
    {{ parent() }} - Catalogue
{% endblock %}

{% block body %}
    <h2>Catalogue</h2>

    <section>
        {% if page > 1 %}
            <a href="{{ path('app_serie', {'page' : page-1}) }}">Page Précédente</a>
        {% endif %}

        {% if page < totalPages %}
            <a href="{{ path('app_serie', {'page' : page+1}) }}">Page Suivante</a>
        {% endif %}
    </section>

    <section class="series-list">
        {% for serie in series %}
        <a href="{{ path('detail',{id : serie.id}) }}">
            <img src="{{ asset('upload/posters/series/') ~ serie.poster }}" width="250px" loading="lazy">
            {% for season in serie.seasons %}
                {{ season.number }} |
            {% endfor %}
        </a>
        {% endfor %}
    </section>
